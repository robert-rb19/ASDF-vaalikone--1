<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Welcome Page -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- See Candidates -->
    <servlet>
        <servlet-name>SeeCandidatesServlet</servlet-name>
        <servlet-class>com.robert.election_machine.web.SeeCandidatesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SeeCandidatesServlet</servlet-name>
        <url-pattern>/see-candidates</url-pattern>
    </servlet-mapping>

    <!-- Take Test -->
    <servlet>
        <servlet-name>TakeTestServlet</servlet-name>
        <servlet-class>com.robert.election_machine.web.TakeTestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TakeTestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <!-- Dashboard -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.robert.election_machine.web.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Edit Candidates -->
    <servlet>
        <servlet-name>EditCandidatesServlet</servlet-name>
        <servlet-class>com.robert.election_machine.web.EditCandidatesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCandidatesServlet</servlet-name>
        <url-pattern>/edit-candidates</url-pattern>
    </servlet-mapping>

    <!-- Edit Questions -->
    <servlet>
        <servlet-name>EditQuestionsServlet</servlet-name>
        <servlet-class>com.robert.election_machine.web.EditQuestionsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditQuestionsServlet</servlet-name>
        <url-pattern>/edit-questions</url-pattern>
    </servlet-mapping>

    <!-- Login -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.robert.election_machine.web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/log-in</url-pattern>
    </servlet-mapping>
    
    <!-- Edit Existing Candidate -->
    <servlet>
        <servlet-name>EditCandidateServlet</servlet-name>
        <servlet-class>com.robert.election_machine.web.EditCandidateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCandidateServlet</servlet-name>
        <url-pattern>/edit-candidate</url-pattern>
    </servlet-mapping>
    
    <!-- Add Candidate -->
    <servlet>
    <servlet-name>AddCandidateServlet</servlet-name>
        <servlet-class>com.robert.election_machine.web.AddCandidateServlet</servlet-class>
        </servlet>
    <servlet-mapping>
        <servlet-name>AddCandidateServlet</servlet-name>
        <url-pattern>/add-candidate</url-pattern>
    </servlet-mapping>

    <!-- Add Question -->
    <servlet>
        <servlet-name>AddQuestionServlet</servlet-name>
        <servlet-class>com.robert.election_machine.web.AddQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddQuestionServlet</servlet-name>
        <url-pattern>/add-question</url-pattern>
    </servlet-mapping>

    <!-- Edit Existing Question -->
    <servlet>
        <servlet-name>EditQuestionServlet</servlet-name>
        <servlet-class>com.robert.election_machine.web.EditQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditQuestionServlet</servlet-name>
        <url-pattern>/edit-question</url-pattern>
    </servlet-mapping>

    <!-- See Results -->
    <servlet>
        <servlet-name>SeeResultsServlet</servlet-name>
        <servlet-class>com.robert.election_machine.web.SeeResultsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SeeResultsServlet</servlet-name>
        <url-pattern>/results</url-pattern>
    </servlet-mapping>

    
</web-app>
